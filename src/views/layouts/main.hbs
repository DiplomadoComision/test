  <!-- Scritps -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
  
  <script>
    const estado = document.querySelector("#estado");
    const input1 = document.querySelector("[name=abogado]");
    const input2 = document.querySelector("[name=estudiante]");

    estado.addEventListener("change", () => {
      if (estado.value === "abogado") {
      input1.style.display = 'initial';
      input2.style.display = 'none';
  } else if(estado.value === "estudiante"){
      input1.style.display = 'none';
      input2.style.display = 'initial';
  } else {
    input1.style.display = 'none';
    input2.style.display = 'none';
  }
});
  </script>

  <script>
    const uegresados = document.querySelector("#uegresados");
    const input3 = document.querySelector("[name=abogadou]");
   

    uegresados.addEventListener("change", () => {
      if (uegresados.value === "otro") {
      input3.style.display = 'initial';
    
  } else{
      input3.style.display = 'none';
      
  } 
});
  </script>

  <script>
    const uniEstu = document.querySelector("#uniEstudia");
    const input4 = document.querySelector("[name=estudiau]");
   

    uniEstu.addEventListener("change", () => {
      if (uniEstu.value === "otro") {
      input4.style.display = 'initial';
    
  } else{
      input4.style.display = 'none';
      
  } 
});
  </script>

  <script>
    function soloLetras(e) {
    var key = e.keyCode || e.which,
      tecla = String.fromCharCode(key).toLowerCase(),
      letras = " áéíóúabcdefghijklmnñopqrstuvwxyz",
      especiales = [8, 37, 39, 46],
      tecla_especial = false;

    for (var i in especiales) {
      if (key == especiales[i]) {
        tecla_especial = true;
        break;
      }
    }

    if (letras.indexOf(tecla) == -1 && !tecla_especial) {
      return false;
    }
  }
  </script>
</body>

</html>